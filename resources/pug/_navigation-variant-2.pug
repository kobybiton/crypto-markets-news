              span.veil.reveal-sm-inline-block
                | Login
            //- Navbar login
            .rd-navbar-login
              form(action="#")
                .form-group
                  input(type="text" name="name" placeholder="Your name" class="form-control")
                .form-group.offset-top-12
                  input(type="password" name="pass" placeholder="Your password" class="form-control")
                button(type="submit" class="btn btn-warning offset-top-12 text-normal")
                  | Login
            a(href="#", data-rd-navbar-toggle='.rd-navbar-register').rd-navbar-register-btn
              span.icon.icon-sm.fa-user.text-white.veil-sm
              span.veil.reveal-sm-inline-block
                | Register
            //- rd-navbar-register
            .rd-navbar-register
              form(action="#")
                .form-group
                  input(type="text" name="name" placeholder="Your name" class="form-control")
                .form-group.offset-top-12
                  input(type="password" name="pass" placeholder="Your password" class="form-control")
                button(type="submit" class="btn btn-warning offset-top-12 text-normal")
                  | Register

