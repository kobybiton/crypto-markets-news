mixin post-variant-1(image, categories, postLink, postTitle, titleClass, imgWidth, imgHeight)
  .post.post-variant-1
    .post-inner
      img.img-responsive.post-image(src=image, width=imgWidth, height=imgHeight, alt="")
      .post-caption
        ul
          each name, href in categories
            li
              a(href=href)
                span.label.label-warning=name
        div
          div(class=titleClass)
            a(href=postLink)!= postTitle
          block